{% extends 'base.html.twig' %}

{% block title %}Products index{% endblock %}

{% block body %}
    <div class=" section-p1">
        <section  class="container">
            <h1 class="h2" style="font-size: 26px;line-height: 35px;padding: 20px 0;">Liste de tous les produits</h1>
            <table class="table">
                <thead >
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Prix</th>
                        <th>Created_at</th>
                        <th>ImageName</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <td >{{ product.id }}</td>
                        <td >{{ product.name }}</td>
                        <td >{{ product.description }}</td>
                        <td >{{ product.price }}</td>
                        
                        <td >{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        
                        <td>{{ product.imageName }}</td>
                        <td>
                            <a href="{{ path('app_products_show', {'id': product.id}) }}" >show</a><br>
                            <a href="{{ path('app_products_edit', {'id': product.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('app_products_new') }}" class=" btn btn-primary">Create new</a>
        </section>

    </div>

  
    
    
{% endblock %}
